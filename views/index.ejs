<div class="container text-center mt-5 d-flex justify-content-center">
  <video id="bgvid" playsinline autoplay muted>
    <source src="/images/LandingPage_videobig.mp4" type="video/mp4" />
  </video>


  <div class="welcome-form">
    <div class="d-flex flex-column justify-content-center align-items-stretch ">
      <div class="forms-card-header">
        <h3>Welcome to BizWheels</h3>
      </div>
      <% if (session.user) { %>
      <div class="d-flex justify-content-center">
        <div class="mt-3">
          <p>Welcome, <%= session.user.firstName %> <%= session.user.lastName %>!</p>
          <% if (session.user.role === "admin") { %>
          <a href="/admin" class="index-btn btn btn-lg mb-3">Go to Admin Dashboard</a>
          <% } else { %>
          <a href="/profile" class="index-btn btn btn-lg mb-3">Go to your Dashboard</a>
          <% } %>
        </div>
      </div>
      <% } else { %>
      <form action="/auth/login">
        <div class="d-flex justify-content-center mt-5">
          <input type="submit" value="Already a Member?" class="index-btn btn btn-lg mb-3">
        </div>
      </form>

      <form action="/auth/signup">
        <div class="d-flex justify-content-center mb-4">
          <input type="submit" value="New here?" class="index-btn btn-lg btn mb-5">
        </div>
      </form>
      <% } %>
    </div>
  </div>
</div>