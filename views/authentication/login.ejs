<div id="login-screen">
    <h2>Login</h2>
    <div>
      <form action="/auth/login" method="POST" style="display: flex; flex-direction: column;">
        <label>
          E-Mail
          <input type="email" name="email" required>
        </label>
        <label>
          Password
          <input type="password" name="password" required>
        </label>
    </div>
    <div>
      <button type="submit">Submit</button>
    </div>
  </div>
  