<div class="forms-container d-flex justify-content-center align-items-center h-100">
  <div class="d-flex shadow mb-5 bg-white rounded" style="min-width:50%; height:65%">
    <div class="login-img-1" style="width:50%">
      <h3>BizWheels</h3>
    </div>
    <div class="login-form d-flex flex-column justify-content-center align-items-stretch" style="width:50%">
      <div class="forms-card-header">
        <h3>Login</h3>
      </div>
      <div class="card-body forms-card-body">
        <form action="/auth/login" method="POST" class="d-flex flex-column" style="width: 70%">
          <div class="input-group form-group mb-2 mt-3">
            <% if (user) { %>
            <input type="email" name="email" required class="form-control" value="<%- user %>" placeholder="E-Mail">
            <% } else{ %>
            <input type="email" name="email" required class="form-control" placeholder="E-Mail">
            <% } %>
          </div>
          <div class="input-group form-group mb-4">
            <input type="password" name="password" class="form-control" placeholder="Password">
          </div>
          <% if (errorMessage) { %>
          <div>
            <p class="error-message">Error: <%- errorMessage %></p>
          </div>
          <% } %>
          <div class="d-flex justify-content-center">
            <input type="submit" value="Sign in" class="login-btn btn btn-sm mb-3">
          </div>
        </form>
      </div>
      <div class="forms-card-footer">
        <div class="d-flex justify-content-center links">
          Not yet a member<a href="/auth/signup">Sign Up</a>
        </div>
      </div>
    </div>
  </div>
</div>