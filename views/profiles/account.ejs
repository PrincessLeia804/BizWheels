<div class="dashboard-img d-flex flex-column justify-content-center align-items-center" style="border: 4px solid green">
  <div class="card" style="width:35%;">
      <div class="card-body" id="card-body">
        <div class="card-body description">
          <h4 class="card-text"><b>My Account</b></h4>
          <ul class="list-group list-group-flush">
            <li class="list-group-item">
              First Name:<br><%- user.firstName %>              
            </li>
            <li class="list-group-item">
              Last Name:<br><%- user.lastName %>
            </li>
            <li class="list-group-item">
              E-Mail:<br><%- user.email %>
            </li>
            <li class="list-group-item">
              Company:<br><%- user.company %>
            </li>
          </ul>
          <div class="card-body">
            <a href="/profile/my-account/update">
              <button class="btn btn-primary" id="car-button">Change my Details</button>
            </a>
          </div>
          <div class="card-body">
            <a href="/profile/my-account/delete" onclick="return confirm('Are you sure you want to delete this item?');">
              <button class="btn btn-primary" id="car-button">Delete my Account</button>
            </a>
          </div>
        </div>
      </div>
  </div>
</div>