<div class="login-img">
  <div class =" admin-head">
    <h2 class="dashboard-h display-6 text-center" style="color: white;">Company Fleet</h2>
  <a href="/admin/fleet/add">
    <button type="submit" class="btn btn-primary btn-position" id="car-button">Add new cars to the fleet</button>
  </a>
</div>
<% if (fleet) { %>
<div class="card-container cars">
  <% fleet.forEach(function(car) { %>
  <div class="card">
    <div class="card-body" id="card-body">
      <h4 class="card-title"><%= car.make %> <%= car.model %></h4>
      <img src="<%= car.imageUrl ? car.imageUrl : "/images/defaultcar.png" %>" alt="Car Image" class="car-image">
      <div class="card-body description">
        <p class="card-text">Description:
        <ul class="list-group list-group-flush">
          <li class="list-group-item fuelType"><%= car.fuelType %></li>
          <li class="list-group-item"><%= car.features %></li>
          <li class="list-group-item"><%= car.registration %></li>
        </ul>
        <div class="button-admin">
          <a href="/admin/fleet/update/<%- car.id %>">
            <button class="btn btn-primary" id="car-button">Edit car</button>
          </a>
          <a href="/admin/fleet/delete/<%- car.id %>" onclick="return confirm('Are you sure you want to delete this item?');">
            <button class="btn btn-primary" id="car-button">Delete car</button>
          </a>
        </div>
      </div>
    </div>
  </div>
  <% }) %>
</div>
<% } else { %>
<p>No cars available for the selected date and time.</p>
<% } %>

</div>